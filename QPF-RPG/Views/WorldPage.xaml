<Page x:Class="QPF_RPG.Views.WorldPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QPF_RPG.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="World">

    <Grid x:Name="Grid">
        <StatusBar x:Name="Status" HorizontalAlignment="Left" Height="20" Margin="0,430,0,0" VerticalAlignment="Top" Width="800"/>
        <Menu x:Name="Menu" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="800">
            <MenuItem Header="File">
                <MenuItem Header="Save" Click="SaveMenuItem"/>
                <MenuItem Header="Exit" Click="ExitMenuItem"/>
            </MenuItem>
        </Menu>
    </Grid>
</Page>
